{
  "name": "@seolcu/commit-renamer-mcp",
  "version": "1.0.0",
  "description": "MCP server for renaming Git commit messages",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "commit-renamer-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "quality": "npm run typecheck && npm run lint && npm run format:check && npm run test",
    "prepublishOnly": "npm run quality && npm run build"
  },
  "keywords": [
    "mcp",
    "git",
    "commit",
    "rename",
    "model-context-protocol",
    "ai-agent"
  ],
  "author": "seolcu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seolcu/commit-renamer-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/seolcu/commit-renamer-mcp/issues"
  },
  "homepage": "https://github.com/seolcu/commit-renamer-mcp#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.0",
    "vitest": "^4.0.14"
  }
}
